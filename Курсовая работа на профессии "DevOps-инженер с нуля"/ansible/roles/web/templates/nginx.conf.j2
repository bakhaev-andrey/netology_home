server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name {{ site_server_name }} _;
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    root {{ site_root }};
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }
}
