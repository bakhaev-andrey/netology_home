global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: 30s

rule_files:
  - /etc/prometheus/rules-web.yml

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['web'] | default([]) %}
          - "{{ hostvars[host]['ansible_host'] }}:9100"
{% endfor %}

  - job_name: 'nginx_log_exporter'
    static_configs:
      - targets:
{% for host in groups['web'] | default([]) %}
          - "{{ hostvars[host]['ansible_host'] }}:4040"
{% endfor %}
